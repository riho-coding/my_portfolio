//- layout/_head.pug

head(prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# " + meta[page]["type"] + ": http://ogp.me/ns/" + meta[page]["type"] + "#")
	meta(charset="UTF-8")
	meta(http-equiv="X-UA-Compatible" content="IE=edge")
	meta(name="format-detection" content="telephone=no")
	meta(name="viewport" content="width=device-width, initial-scale=1.0")
	meta(name="robots" content="noindex, nofollow")
	//- Icon
	link(rel="mask-icon" href=meta[page]["path"] + site["favicon_path"] + ".svg" type="image/svg+xml" sizes="any")
	link(rel="icon alternate" href=meta[page]["path"] + site["favicon_path"] + ".ico")
	link(rel="apple-touch-icon" href=meta[page]["path"] + site["favicon_path_app"] sizes="180x180")
	//- OGP
	meta(property="og:url" content=site["url"] + meta[page]["slug"])
	meta(property="og:title" content=meta[page]["title"])
	meta(property="og:type" content=meta[page]["type"])
	meta(property="og:site_name" content=site["name"])
	meta(property="og:description" content=meta[page]["desc"])
	meta(property="og:image" content=meta[page]["path"] + site["img_path"])
	meta(property="og:image:width" content=site["img_width"])
	meta(property="og:image:height" content=site["img_height"])
	meta(property="og:local" content="ja_JP")
	//- Site Base
	title=meta[page]["title"]
	meta(name="description" content=meta[page]["desc"])
	meta(name="theme-color" content=site["color"])
	//- CSS
	link(rel="stylesheet" href=meta[page]["path"] + "css/style.min.css" type="text/css" media='all')
