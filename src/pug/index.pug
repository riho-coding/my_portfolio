//- index.pug

extends ./layout/_template

block variable
	- const page = 'top';
	- const path = "/";

block global_navigation
	include ./mixin/_nav
	+global_navigation(top)

block main
	main.l-hero
		.p-index-fv
			.p-index-fv__inner
				h2.p-index-fv__title.u-uppercase
					span.p-index-fv__title--sans-serif Port
					span.p-index-fv__title--serif folio
				canvas#gradient-canvas(data-transition-in)

block script
	script(src=[path]+"js/Gradient.js")
	script(src=[path]+"js/main.bundle.js")
