//- works/index.pug

extends ../layout/_template

block variable
	- const page = "works";
	- const path = "../";

block global_navigation
	include ../mixin/_nav
	+global_navigation(works)

block main
	main.l-main
		.l-main__inner
			h1.u-visibility-hidden Works
			section.l-section.p-works-project
				.p-works-project__inner
					h2.c-section-title All Project
					ul.p-works-project__list
						each item in project
							li.p-works-project__item
								a.p-works-project__link.js-reveal-link(href=item.slug)
									h3.p-works-project__title #{item.name}
										span.p-works-project__arrow
									span.p-works-project__category #{item.category}
									.p-works-project__thumbnail.js-reveal-elm
										img.js-reveal-img(src=[path] + "img/" + item.img_path alt=item.alt width="16" height="" decoding="async" loading="lazy")

block script
	script(src=[path]+"js/main.bundle.js")
